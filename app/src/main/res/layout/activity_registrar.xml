<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sandwiches"
    tools:context=".RegistrarActivity">

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="671dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            app:srcCompat="@drawable/as" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFFFF"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/contrasena"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="Contrasena"
            android:inputType="textPassword"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFFFF"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/contrasenaConfirmacion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Confirmar Contrasena"
            android:inputType="textPassword"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFFFF"
            android:textStyle="italic" />

        <Button
            android:id="@+id/iniciarSesionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registrarUsuario"
            android:text="@string/btn_registrarse_sesion" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>